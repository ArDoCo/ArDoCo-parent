<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.kit.ipd</groupId>
  <artifactId>ArDoCo-parent</artifactId>
  <version>0.0.2</version>
  <packaging>pom</packaging>

  <name>ArDoCo-parent</name>
  <description>Parent-POM for the ArDoCo project</description>
  <url>https://github.com/ArDoCo/ArDoCo-parent</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.optimize>true</project.build.optimize>

        <java.version>11</java.version>
        <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
        <maven-source-plugin.version>3.0.1</maven-source-plugin.version>
        <java.optimize>true</java.optimize>
        <java.debug>true</java.debug>

        <jena.version>3.7.0</jena.version>
        <eclipse.collections.version>9.2.0</eclipse.collections.version>
        <nlwrapper.version>0.0.4</nlwrapper.version>
        <graphimprove.version>0.0.4</graphimprove.version>
        <commons-lang.version>3.3</commons-lang.version>
    </properties>

    <issueManagement>
        <url>https://github.com/ArDoco/ArDoCo-parent/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>

    <repositories>
    <repository>
        <id>ipdNexus-releases</id>
        <name>IPD-Repository</name>
        <url>http://bob.ipd.kit.edu/nexus/repository/maven-public-releases</url>
    </repository>
    <repository>
        <id>ipdNexus-snapshots</id>
        <name>IPD-Repository</name>
        <url>http://bob.ipd.kit.edu/nexus/repository/maven-public-snapshots</url>
    </repository>
    <repository>
        <id>github ArDoCo</id>
        <name>GitHub Ardoco Apache Maven Packages</name>
        <url>https://maven.pkg.github.com/ArDoCo/</url>
    </repository>
    </repositories>

    <parent>
        <groupId>edu.kit.ipd.indirect</groupId>
        <artifactId>indirect</artifactId>
        <version>0.0.9</version>
    </parent>

    <dependencies>
        <!-- ArDoCo -->
        <dependency>
            <groupId>edu.kit.ipd</groupId>
            <artifactId>GraphImprove</artifactId>
            <version>${graphimprove.version}</version>
        </dependency>

        <dependency>
            <groupId>edu.kit.ipd</groupId>
            <artifactId>NLWrapper</artifactId>
            <version>${nlwrapper.version}</version>
        </dependency>

        <!-- Eclipse collections -->
        <dependency>
          <groupId>org.eclipse.collections</groupId>
          <artifactId>eclipse-collections-api</artifactId>
          <version>${eclipse.collections.version}</version>
        </dependency>
        <dependency>
          <groupId>org.eclipse.collections</groupId>
          <artifactId>eclipse-collections</artifactId>
          <version>${eclipse.collections.version}</version>
        </dependency>

        <dependency>
          <groupId>org.junit.jupiter</groupId>
          <artifactId>junit-jupiter-engine</artifactId>
          <version>5.3.1</version>
          <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <version>2.23.0</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-runner</artifactId>
            <version>1.2.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
             <groupId>org.junit.vintage</groupId>
             <artifactId>junit-vintage-engine</artifactId>
             <version>5.2.0</version>
             <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
            <version>2.1</version>
            <scope>test</scope>
        </dependency>

        <dependency>
          <groupId>org.apache.commons</groupId>
          <artifactId>commons-lang3</artifactId>
          <version>${commons-lang.version}</version>
        </dependency>
    </dependencies>

    <build>
    <plugins>
        <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.19.1</version>
        <dependencies>
            <dependency>
                 <groupId>org.junit.platform</groupId>
                 <artifactId>junit-platform-surefire-provider</artifactId>
                 <version>1.0.1</version>
             </dependency>
         </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
            <release>${java.version}</release>
            <optimize>${java.optimize}</optimize>
            <debug>${java.debug}</debug>
        </configuration>
      </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <version>${maven-source-plugin.version}</version>
            <executions>
                <execution>
                    <id>attach-sources</id>
                    <phase>package</phase>
                    <goals>
                        <goal>jar-no-fork</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <repository>
        <id>github</id>
        <name>GitHub ArDoCo Apache Maven Packages</name>
        <url>https://maven.pkg.github.com/ArDoCo/ArDoCo-parent</url>
   </repository>
  </distributionManagement>

</project>
